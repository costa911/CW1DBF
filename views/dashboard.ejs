<!-- views/dashboard.ejs -->
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Dashboard - Stepping Into History</title>
    <link rel="stylesheet" href="/css/styles.css">
</head>
<body>
    <div class="dashboard-container">
        <div class="welcome-message">
            <h1>Welcome to Stepping Into History, <%= username || 'Guest' %>!</h1>
        </div>

        <div class="user-info">
            <h2>User Information</h2>
            <p><strong>Username:</strong> <%= username || 'N/A' %></p>
            <p><strong>Access Level:</strong> <%= userType || 'N/A' %></p>
        </div>

        <!-- Display any error messages -->
        <% if (error) { %>
            <div class="error-message" style="color: red;">
                <p><strong>Error:</strong> <%= error %></p>
            </div>
        <% } %>

        <!-- Add dashboard navigation or features depending on user role -->
        <div class="dashboard-actions">
            <% if (userType === 'admin') { %>
                <h3>Admin Dashboard</h3>
                <ul>
                    <li><a href="/manage-users">Manage Users</a></li>
                    <li><a href="/view-reports">View Reports</a></li>
                    <li><a href="/show-tables">Show Tables</a></li> <!-- Link to Show Tables -->
                    <li><a href="/show-tours">Show Upcoming Tours</a></li> <!-- Link to Show Upcoming Tours -->
                    <li><a href="/settings">Settings</a></li>
                </ul>
            <% } else if (userType === 'editor') { %>
                <h3>Editor Dashboard</h3>
                <ul>
                    <li><a href="/edit-articles">Edit Articles</a></li>
                    <li><a href="/view-submissions">View Submissions</a></li>
                    <li><a href="/show-tables">Show Tables</a></li> <!-- Link to Show Tables -->
                    <li><a href="/show-tours">Show Upcoming Tours</a></li> <!-- Link to Show Upcoming Tours -->
                </ul>
            <% } else { %>
                <h3>Viewer Dashboard</h3>
                <p>You have limited access as a viewer.</p>
                <ul>
                    <li><a href="/view-content">View Content</a></li>
                    <li><a href="/show-tables">Show Tables</a></li> <!-- Link to Show Tables -->
                    <li><a href="/show-tours">Show Upcoming Tours</a></li> <!-- Link to Show Upcoming Tours -->
                </ul>
            <% } %>
        </div>

        <div class="logout">
            <form action="/logout" method="POST">
                <button type="submit">Logout</button>
            </form>
        </div>
    </div>
</body>
</html>